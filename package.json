{
	"name": "edgeros",
	"private": true,
	"displayName": "%extension.displayName%",
	"description": "%extension.description%",
	"enableProposedApi": false,
	"version": "0.1.5",
	"publisher": "edgeros",
	"repository": "https://github.com/edgeros/vsce.git",
	"icon": "media/icon.png",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Language Packs",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "EdgerOS",
			"properties": {
				"edgeros.template.originUsing": {
					"scope": "window",
					"type": "string",
					"default": "github",
					"description": "Template origin."
				},
				"edgeros.template.list": {
					"type": "array",
					"scope": "window",
					"default": [
						{
							"type": [
								"base"
							],
							"displayName": "Empty template",
							"name": "empty",
							"discription": "Empty temp late Empty templateEmptytemplate Empty template Empty template",
							"icon": "http://docs.edgeros.com/edgeros/api/assets/logo.png",
							"origin": [
								{
									"name": "zoho",
									"url": "https://files.zohopublic.com.cn/public/workdrive-public/download/g86ih408d86a6fb5f4f1b9809d786ed36f9a1"
								},
								{
									"name": "github",
									"url": "https://codeload.github.com/edgeros/tpl-blank/zip/main"
								}
							]
						}
					],
					"items": {
						"anyOf": [
							{
								"type": "object",
								"properties": {
									"type": {
										"type": "array",
										"description": "Template type.",
										"items": {
											"type": "string"
										}
									},
									"name": {
										"type": "string",
										"description": "Template name."
									},
									"displayName": {
										"type": "string",
										"description": "Template display name."
									},
									"icon": {
										"type": "string",
										"description": "Template icon."
									},
									"description": {
										"type": "string",
										"description": "Template description."
									},
									"origin": {
										"type": "array",
										"scope": "window",
										"items": {
											"anyOf": [
												{
													"name": {
														"type": "string",
														"description": "origin name."
													},
													"url": {
														"type": "string",
														"description": "download url."
													}
												}
											]
										}
									}
								},
								"required": [
									"type",
									"name",
									"displayName",
									"icon",
									"origin"
								]
							}
						]
					},
					"description": "Template download URL."
				},
				"edgeros.template.update": {
					"type": "string",
					"scope": "window",
					"default": "https://codeload.github.com/edgeros/tpl-blank/zip/main",
					"description": "Templates update URL."
				}
			}
		},
		"languages": [
			{
				"id": "Log",
				"aliases": [
					"log"
				],
				"extensions": [
					".log"
				],
				"configuration": "./log.configuration.json",
				"mimetypes": [
					"log",
					"text/log",
					"text/x-log",
					"text/x-code-output",
					"x-code-output"
				]
			}
		],
		"grammars": [
			{
				"language": "Log",
				"scopeName": "code.log",
				"path": "./src/syntaxes/log.tmLanguage"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "edgerDeviceView",
					"name": "%extension.explorer.name%"
				}
			]
		},
		"commands": [
			{
				"command": "edgeros.openSettingsUI",
				"title": "%extension.commands.openSettings%"
			},
			{
				"command": "edgeros.openSettings",
				"title": "%extension.commands.openSettings%"
			},
			{
				"command": "mobile.preview",
				"title": "%extension.commands.preview%"
			},
			{
				"command": "edgeros.propmtNewProject",
				"title": "%extension.commands.new%"
			},
			{
				"command": "edgeros.newProject",
				"title": "%extension.commands.new%"
			},
			{
				"command": "edgerDevices.refreshDevice",
				"title": "%extension.commands.refresh%",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "edgerDevices.addDevice",
				"title": "%extension.commands.add%"
			},
			{
				"command": "edgerDevices.archive",
				"title": "%extension.commands.archive%"
			},
			{
				"command": "edgerDevices.updateDevice",
				"title": "%extension.commands.edit%",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "edgerDevices.deleteDevice",
				"title": "%extension.commands.delete%"
			},
			{
				"command": "edgerDevices.installApp",
				"title": "%extension.commands.deploy%"
			},
			{
				"command": "edgerDevices.openConsole",
				"title": "%extension.commands.console%"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "edgerDevices.refreshDevice",
					"when": "view == edgerDeviceView",
					"group": "navigation"
				},
				{
					"command": "edgerDevices.addDevice",
					"when": "view == edgerDeviceView"
				},
				{
					"command": "edgeros.openSettingsUI",
					"when": "view == edgerDeviceView"
				},
				{
					"command": "edgerDevices.archive",
					"when": "view == edgerDeviceView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "mobile.preview",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "inline"
				},
				{
					"command": "edgerDevices.installApp",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "inline"
				},
				{
					"command": "edgerDevices.updateDevice",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "@1"
				},
				{
					"command": "edgerDevices.deleteDevice",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "@1"
				},
				{
					"command": "edgerDevices.openConsole",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "@2"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "edgerDeviceView",
				"contents": "%extension.contents% [%extension.contents.linkTitle%](https://www.extension.com/)."
			},
			{
				"view": "edgerDeviceView",
				"contents": "[%extension.contents.add%](command:edgerDevices.addDevice)"
			}
		]
	},
	"scripts": {
		"pack": "vsce package",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/form-data": "^2.5.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.9",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.2.0",
		"typescript": "^3.9.3",
		"vsce": "^1.79.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/ncp": "^2.0.4",
		"axios": "^0.19.2",
		"findit2": "^2.2.3",
		"form-data": "^3.0.0",
		"iconv-lite": "^0.6.2",
		"mkdirp": "^1.0.3",
		"ncp": "^2.0.0",
		"pipe-io": "^4.0.0",
		"try-to-catch": "^3.0.0",
		"yauzl": "^2.6.0",
		"yazl": "^2.4.1"
	}
}
