{
	"name": "edgeros",
	"displayName": "edgeros",
	"description": "EdgerOS development extension for VSC.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:edgeros.helloEdgerOS",
		"onView:eosManageView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "edgeros.helloEdgerOS",
				"title": "Hello EdgerOS"
			},
			{
				"command": "edgeros.showAddDevView",
				"title": "Add Device View",
				"icon": {
					"light": "resources/icon/light/command_addDevice.svg",
					"dark": "resources/icon/dark/command_addDevice.svg"
				}
			},
			{
				"command": "edgeros.showCreateProView",
				"title": "Create EdgerOS Project",
				"icon": {
					"light": "resources/icon/light/command_createProject.svg",
					"dark": "resources/icon/dark/command_createProject.svg"
				}
			},
			{
				"command": "edgeros.openBrowser",
				"title": "Open Browser",
				"icon": {
					"light": "resources/icon/light/command_openBrowser.svg",
					"dark": "resources/icon/dark/command_openBrowser.svg"
				}
			},
			{
				"command": "edgeros.openConsole",
				"title": "Open Console",
				"icon": {
					"light": "resources/icon/dark/command_openConsole.svg",
					"dark": "resources/icon/dark/command_openConsole.svg"
				}
			},
			{
				"command": "edgeros.buildEap",
				"title": "Open Console",
				"icon": {
					"light": "resources/icon/dark/command_buildEap.svg",
					"dark": "resources/icon/dark/command_buildEap.svg"
				}
			},
			{
				"command": "edgeros.installEap",
				"title": "install App",
				"icon": {
					"light": "resources/icon/dark/command_upload.svg",
					"dark": "resources/icon/dark/command_upload.svg"
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "eosManageView",
					"name": "EdgerOS"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "edgeros.buildEap",
					"when": "view == eosManageView",
					"group": "navigation"
				},
				{
					"command": "edgeros.showCreateProView",
					"when": "view == eosManageView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "edgeros.openBrowser",
					"when": "view == eosManageView && viewItem == web",
					"group": "inline"
				},
				{
					"command": "edgeros.showAddDevView",
					"when": "view == eosManageView && viewItem == deviceList",
					"group": "inline"
				},
				{
					"command": "edgeros.openConsole",
					"when": "view == eosManageView && viewItem == device",
					"group": "inline"
				},
				{
					"command": "edgeros.installEap",
					"when": "view == eosManageView && viewItem == device",
					"group": "inline"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "eosManageView",
				"contents": "此项目并非Edgeros Project.\n[访问官网](http://www.egeros.com)\n[创建项目](command:edgeros.showCreateProView)"
			}
		],
		"languages": [
			{
				"id": "Log",
				"extensions": [
					".log"
				]
			}
		],
		"grammars": [
			{
				"language": "Log",
				"scopeName": "edgeros.log",
				"path": "./syntaxes/log.tmLanguage"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/ejs": "^3.0.6",
		"@types/fs-extra": "^9.0.11",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"@types/requireindex": "^1.2.0",
		"axios": "^0.21.1",
		"compressing": "^1.5.1",
		"ejs": "^3.1.6",
		"form-data": "^4.0.0",
		"fs-extra": "^9.1.0",
		"globby": "^11.0.3",
		"requireindex": "^1.2.0"
	}
}
