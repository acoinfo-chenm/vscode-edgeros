{
	"name": "edgeros",
	"displayName": "edgeros",
	"description": "EdgerOS development extension for VSC.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:edgeros.helloEdgerOS",
		"onView:eosManageView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "edgeros.helloEdgerOS",
				"title": "Hello EdgerOS"
			},
			{
				"command": "edgeros.showAddDevView",
				"title": "Add Device View",
				"icon": {
					"light": "resources/icon/light/command_addDevice.svg",
					"dark": "resources/icon/dark/command_addDevice.svg"
				}
			},
			{
				"command": "edgeros.showCreateProView",
				"title": "Create EdgerOS Project",
				"icon": {
					"light": "resources/icon/light/command_createProject.svg",
					"dark": "resources/icon/dark/command_createProject.svg"
				}
			}
		],
		"views": {
			"explorer": [
				{
					"id": "eosManageView",
					"name": "EdgerOS"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "edgeros.showAddDevView",
					"when": "view == eosManageView",
					"group": "navigation"
				},
				{
					"command": "edgeros.showCreateProView",
					"when": "view == eosManageView",
					"group": "navigation"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "eosManageView",
				"contents": "此项目并非Edgeros Project.\n[访问官网](http://www.egeros.com)\n[创建项目](command:edgeros.showCreateProject)"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/ejs": "^3.0.6",
		"@types/fs-extra": "^9.0.11",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"@types/requireindex": "^1.2.0",
		"ejs": "^3.1.6",
		"fs-extra": "^9.1.0",
		"requireindex": "^1.2.0"
	}
}
