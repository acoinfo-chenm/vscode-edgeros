{
	"name": "edgeros",
	"displayName": "edgeros",
	"description": "",
	"enableProposedApi": true,
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:edgeros.installApp",
		"onView:edgerDeviceView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [{
				"id": "edgerDeviceView",
				"name": "Edger Devices"
			}]
		},
		"commands": [{
				"command": "edgerDevices.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "edgerDevices.addEntry",
				"title": "Add"
			},
			{
				"command": "edgerDevices.editEntry",
				"title": "Edit",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "edgerDevices.deleteEntry",
				"title": "Delete"
			},
			{
				"command": "edgerDevices.installApp",
				"title": "Install"
			}
		],
		"menus": {
			"view/title": [{
					"command": "edgerDevices.refreshEntry",
					"when": "view == edgerDeviceView",
					"group": "navigation"
				},
				{
					"command": "edgerDevices.addEntry",
					"when": "view == edgerDeviceView"
				}
			],
			"view/item/context": [{
					"command": "edgerDevices.installApp",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "inline"
				}, {
					"command": "edgerDevices.editEntry",
					"when": "view == edgerDeviceView && viewItem == edger"
				},
				{
					"command": "edgerDevices.deleteEntry",
					"when": "view == edgerDeviceView && viewItem == edger"
				}
			]
		},
		"viewsWelcome": [{
			"view": "edgerDeviceView",
			"contents": "No edger devices found [learn more](https://www.edgeros.com/).\n[Add Edger Device](command:nodeDependencies.addEntry)"
		}]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.4.33",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@types/form-data": "^2.5.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"adm-zip": "^0.4.14",
		"form-data": "^3.0.0",
		"axios": "^0.19.2"
	}
}