{
	"name": "edgeros",
	"private": true,
	"displayName": "%extension.displayName%",
	"description": "%extension.description%",
	"enableProposedApi": false,
	"version": "0.0.8",
	"publisher": "edgeros",
	"repository": "https://github.com/edgeros/vsce.git",
	"icon": "media/icon.png",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Language Packs",
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "edgerDeviceView",
					"name": "%extension.explorer.name%"
				}
			]
		},
		"commands": [
			{
				"command": "edgerDevices.refreshDevice",
				"title": "%extension.commands.refresh%",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "edgerDevices.addDevice",
				"title": "%extension.commands.add%"
			},
			{
				"command": "edgerDevices.archive",
				"title": "%extension.commands.archive%"
			},
			{
				"command": "edgerDevices.updateDevice",
				"title": "%extension.commands.edit%",
				"icon": {
					"light": "resources/light/edit.svg",
					"dark": "resources/dark/edit.svg"
				}
			},
			{
				"command": "edgerDevices.deleteDevice",
				"title": "%extension.commands.delete%"
			},
			{
				"command": "edgerDevices.installApp",
				"title": "%extension.commands.deploy%"
			},
			{
				"command": "edgerDevices.openConsole",
				"title": "%extension.commands.console%"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "edgerDevices.refreshDevice",
					"when": "view == edgerDeviceView",
					"group": "navigation"
				},
				{
					"command": "edgerDevices.addDevice",
					"when": "view == edgerDeviceView"
				},
				{
					"command": "edgerDevices.archive",
					"when": "view == edgerDeviceView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "edgerDevices.installApp",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "inline"
				},
				{
					"command": "edgerDevices.updateDevice",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "@1"
				},
				{
					"command": "edgerDevices.deleteDevice",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "@1"
				},
				{
					"command": "edgerDevices.openConsole",
					"when": "view == edgerDeviceView && viewItem == edger",
					"group": "@2"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "edgerDeviceView",
				"contents": "%extension.contents% [%extension.contents.linkTitle%](https://www.extension.com/).\n[%模拟器下载%](https://www.extension.com/).\n[%extension.contents.addDevice%](command:edgerDevices.addDevice)"
			}

		]
	},
	"scripts": {
		"clean": "gulp clean",
		"cp": "gulp compile",
		"gp": "gulp package",
		"pack": "vsce package",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/form-data": "^2.5.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.9",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.2.0",
		"typescript": "^3.9.3",
		"vsce": "^1.79.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"findit2": "^2.2.3",
		"form-data": "^3.0.0",
		"mkdirp": "^1.0.3",
		"pipe-io": "^4.0.0",
		"try-to-catch": "^3.0.0",
		"yauzl": "^2.6.0",
		"yazl": "^2.4.1"
	}
}
